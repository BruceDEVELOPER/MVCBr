}



/*file upload*/

.fileContainer {
    overflow: hidden;
    position: relative;
}

.fileContainer [type="file"] {
    cursor: inherit;
    display: block;
    font-size: 999px;
    min-height: 100%;
    min-width: 100%;
    opacity: 0;
    position: absolute;
    right: 0;
    text-align: right;
    top: 0;
}

